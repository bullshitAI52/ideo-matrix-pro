{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "video-matrix-pro-zwm",
        "version": "1.3.0"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "shell": {
                "all": true,
                "open": true,
                "execute": true,
                "sidecar": true
            },
            "dialog": {
                "all": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "**"
                ]
            },
            "http": {
                "all": true,
                "request": true,
                "scope": [
                    "http://**",
                    "https://**"
                ]
            },
            "notification": {
                "all": true
            },
            "globalShortcut": {
                "all": true
            },
            "os": {
                "all": true
            },
            "path": {
                "all": true
            },
            "window": {
                "all": true
            },
            "process": {
                "all": true
            },
            "clipboard": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "targets": [
                "nsis",
                "msi",
                "app",
                "dmg",
                "updater"
            ],
            "identifier": "com.video-matrix-pro.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "externalBin": [
                "binaries/ffmpeg",
                "binaries/ffprobe"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Video Matrix Pro zwm",
                "width": 800,
                "height": 600
            }
        ]
    }
}